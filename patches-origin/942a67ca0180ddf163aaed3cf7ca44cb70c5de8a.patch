+                  LiftoffRegister src, ValueKind kind) {
+  MemOperand dst(base, offset);
+  switch (kind) {
+    case kI32:
+      assm->Sw(src.gp(), dst);
+      break;
+    case kI64:
+    case kRefNull:
+    case kRef:
+    case kRtt:
+      assm->Sd(src.gp(), dst);
+      break;
+    case kF32:
+      assm->StoreFloat(src.fp(), dst);
+      break;
+    case kF64:
+      assm->StoreDouble(src.fp(), dst);
+      break;
+    default:
+      UNREACHABLE();
+  }
