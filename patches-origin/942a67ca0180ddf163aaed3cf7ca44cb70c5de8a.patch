+#elif V8_TARGET_ARCH_RISCV32
+void Assembler::RV_li(Register rd, int32_t imm) {
+  int32_t high_20 = ((imm + 0x800) >> 12);
+  int32_t low_12 = imm & 0xfff;
+  if (high_20) {
+    lui(rd, high_20);
+    if (low_12) {
+      addi(rd, rd, low_12);
+    }
+  } else {
+    addi(rd, zero_reg, low_12);
+  }
+}
