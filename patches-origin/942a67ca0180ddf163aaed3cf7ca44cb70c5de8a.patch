+void Assembler::stop(uint32_t code) {
+  DCHECK_GT(code, kMaxWatchpointCode);
+  DCHECK_LE(code, kMaxStopCode);
+#if defined(V8_HOST_ARCH_RISCV64) || defined(V8_HOST_ARCH_RISCV32)
+  break_(0x54321);
+#else  // V8_HOST_ARCH_RISCV64 || V8_HOST_ARCH_RISCV32
+  break_(code, true);
+#endif
+}
